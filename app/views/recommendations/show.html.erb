<!-- To be filled in to display recommendations -->
<!-- ID necessary for the overlay on users#review -->
<div id="rec-<%= @recommendation.id %>-details" style="visibility: visible; width:100%; height:100%; position: absolute; z-index:1000; background:black; opacity:0.7">
  <!-- Modal with recommendation info -->
  <div style="width:600px; background-color: #fff; border:1px solid #000; margin: 100px auto; padding:15px">
    Description: <%= @recommendation.description %><br>
    Type: <%= @recommendation.category %><br>
    Words that describe <%= @recommendation.title %><br>

    <div>
      <!-- TODO: replace :category with :feedback -->
        <%= form_for(@recommendation) do |f| %>
        <%= f.label :category, "What do you think of this recommendation?" %><br><br>
        <%= f.radio_button(:category, "1") %>
        <%= f.label(:yes, "This is definitely for me.") %><br>
        <%= f.radio_button(:category, ".5") %>
        <%= f.label(:maybe, "I'll look into it.") %><br>
        <%= f.radio_button(:category, "0") %>
        <%= f.label(:meh, "I'm indifferent.") %><br>
        <%= f.radio_button(:category, "-1") %>
        <%= f.label(:no, "This is definitely not for me.") %><br>
        <%= f.submit "Ok", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

