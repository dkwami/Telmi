<li id="recommendation-<%= recommendation.id %>">
  <p>
    <!--displays link to view each recommendation in a pop up window -->
    <h4><span id="rec-title-<%= recommendation.id %>"><%= link_to recommendation.title, recommendation_path(recommendation.id), :remote => true %></span></h4>
    <span id="category-<%= recommendation.id %>">     Category: <%= recommendation.category %></span><br>
    <span id="description-<%= recommendation.id %>">  Description: <%= recommendation.description %></span>
  </p>
</li>
